            <script>
              const openCartBtn = document.getElementById("openCartBtn");
const cartSidebar = document.getElementById("cartSidebar");
const cartOverlay = document.getElementById("cartOverlay");
const closeCartBtn = document.getElementById("closeCartBtn");
const cartItemsContainer = document.getElementById("cartItemsContainer");
const cartTotalAmount = document.getElementById("cartTotalAmount");
const headerCartCount = document.getElementById("headerCartCount");

/* ----------------------- OPEN / CLOSE ----------------------- */
function openCart(){
  loadCart();
  cartSidebar.classList.add("active");
  cartOverlay.classList.add("active");
}
function closeCart(){
  cartSidebar.classList.remove("active");
  cartOverlay.classList.remove("active");
}

openCartBtn.addEventListener("click", openCart);
closeCartBtn.addEventListener("click", closeCart);
cartOverlay.addEventListener("click", closeCart);

/* ----------------------- LOAD CART -------------------------- */
async function loadCart(){
  const token = localStorage.getItem("token");
  if(!token) return;

  const res = await fetch("/cart", {
    headers: { "Authorization": "Bearer " + token }
  });

  const json = await res.json();
  if(!json.success) return;

const items = json.cart;

  headerCartCount.textContent = items.length ;
  cartItemsContainer.innerHTML = "";

  let total = 0;

 items.forEach(item => {
  total += Number(item.price) * Number(item.quantity);

  cartItemsContainer.insertAdjacentHTML("beforeend", `
    <div class="cart-item" data-cart-id="${item.cart_id}" data-stock="${item.stock}">
      <img src="/uploads/${item.image1}">
      
      <div class="cart-details">
        <div class="name">${item.name}</div>
        <div class="price">‚Çπ${item.price}</div>

        <div class="qty-box">
          <button class="qty-btn minus" onclick="updateQty(${item.cart_id}, -1)">‚àí</button>
          <span class="qty-value">${item.quantity}</span>
          <button class="qty-btn plus" onclick="updateQty(${item.cart_id}, 1)">+</button>
        </div>

        <small class="stock-msg" style="display:none;color:#ff4d4d">
          Max stock reached
        </small>
      </div>

      <span class="remove-item" onclick="removeCartItem(${item.cart_id})">√ó</span>
    </div>
  `);

  /* ‚úÖ NOW DOM EXISTS ‚Äî SAFE TO TOUCH */
  const cartItem = cartItemsContainer.lastElementChild;
  const plusBtn = cartItem.querySelector(".plus");
  const stockMsg = cartItem.querySelector(".stock-msg");

  if (item.quantity >= item.stock) {
    plusBtn.disabled = true;
    plusBtn.style.opacity = "0.4";
    stockMsg.style.display = "block";
  }
});

  cartTotalAmount.textContent = "‚Çπ" + total;
}

/* ----------------------- UPDATE QTY ------------------------- */
async function updateQty(cartId, change) {
  const token = localStorage.getItem("token");
  if (!token) return;

  const cartItem = document.querySelector(`[data-cart-id="${cartId}"]`);
  if (!cartItem) return;

  const stock = Number(cartItem.dataset.stock);
  const qtyEl = cartItem.querySelector(".qty-value");
  const currentQty = Number(qtyEl.textContent);

  const newQty = currentQty + change;

  // ‚õî frontend guards
  if (newQty < 1) return;

  if (newQty > stock) {
    showToast("Stock limit reached", "error");
    return;
  }

  const res = await fetch("/cart/update", {
    method: "POST",
    headers: {
      "Content-Type": "application/json",
      "Authorization": "Bearer " + token
    },
    body: JSON.stringify({ cart_id: cartId, change })
  });

  const json = await res.json();

  if (!json.success) {
    showToast(json.message || "Update failed", "error");
    return;
  }

  // üîÑ refresh cart to stay accurate
  loadCart();
}


/* ----------------------- REMOVE ITEM ------------------------ */
async function removeCartItem(cartId){
  const token = localStorage.getItem("token");

  const res = await fetch("/cart/remove", {
    method: "POST",
    headers: {
      "Authorization": "Bearer " + token,
      "Content-Type": "application/json"
    },
    body: JSON.stringify({ cart_id: cartId })
  });

  const json = await res.json();

  if (json.success) {
    loadCart();
  } else {
    showToast("Remove failed", "error");
  }
}

