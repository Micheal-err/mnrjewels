/* ----------------------- UPDATE QTY ------------------------- */
async function updateQty(cartId, change) {
  const token = localStorage.getItem("token");
  if (!token) return;

  const cartItem = document.querySelector(`[data-cart-id="${cartId}"]`);
  if (!cartItem) return;

  const stock = Number(cartItem.dataset.stock);
  const qtyEl = cartItem.querySelector(".qty-value");
  const currentQty = Number(qtyEl.textContent);

  const newQty = currentQty + change;

  // ‚õî frontend guards
  if (newQty < 1) return;

  if (newQty > stock) {
    showToast("Stock limit reached", "error");
    return;
  }

  const res = await fetch("/cart/update", {
    method: "POST",
    headers: {
      "Content-Type": "application/json",
      "Authorization": "Bearer " + token
    },
    body: JSON.stringify({ cart_id: cartId, change })
  });

  const json = await res.json();

  if (!json.success) {
    showToast(json.message || "Update failed", "error");
    return;
  }

  // üîÑ refresh cart to stay accurate
  loadCart();
}


/* ----------------------- REMOVE ITEM ------------------------ */
async function removeCartItem(cartId){
  const token = localStorage.getItem("token");

  const res = await fetch("/cart/remove", {
    method: "POST",
    headers: {
      "Authorization": "Bearer " + token,
      "Content-Type": "application/json"
    },
    body: JSON.stringify({ cart_id: cartId })
  });

  const json = await res.json();

  if (json.success) {
    loadCart();
  } else {
    showToast("Remove failed", "error");
  }
}




document.addEventListener("DOMContentLoaded", () => {
  const searchInput = document.querySelector(".search-input");
  const searchResults = document.getElementById("searchResults");
  const searchForm = document.getElementById("search-form");

  let debounceTimer;

  function hideResults() {
    searchResults.style.display = "none";
    searchResults.innerHTML = "";
  }

  async function runSearch(q) {
    searchResults.style.display = "block";
    searchResults.innerHTML = `<div class="p-2 text-muted">Searching‚Ä¶</div>`;

    try {
      const res = await fetch(`/api/products/search?q=${encodeURIComponent(q)}`);
      const data = await res.json();

      if (!data.success || !data.products.length) {
        searchResults.innerHTML = `<div class="p-2 text-muted">No products found</div>`;
        return;
      }

     searchResults.innerHTML = data.products.map(p => `
  <div class="search-item" data-id="${p.id}">
    <img src="/uploads/${p.image1}" alt="${p.name}">
    <div>
      <div class="fw-500">${p.name}</div>
    </div>
  </div>
`).join("");

    } catch {
      searchResults.innerHTML = `<div class="p-2 text-danger">Search failed</div>`;
    }
  }

  // INPUT SEARCH
  searchInput.addEventListener("input", () => {
    const q = searchInput.value.trim();
    clearTimeout(debounceTimer);

    if (q.length < 2) {
      hideResults();
      return;
    }

    debounceTimer = setTimeout(() => runSearch(q), 250);
  });

  // üî• MAIN SEARCH ICON / BUTTON (FORM SUBMIT)
  searchForm.addEventListener("submit", e => {
    e.preventDefault(); // ‚õî stop reload / Crafto

    const q = searchInput.value.trim();
    if (q.length >= 2) runSearch(q);
  });

  // RESULT CLICK
  searchResults.addEventListener("mousedown", e => {
    const item = e.target.closest(".search-item");
    if (!item) return;
    window.location.href = `/product/${item.dataset.id}`;
  });
});




