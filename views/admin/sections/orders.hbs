<h2 class="admin-title">Orders</h2>

<!-- FILTER BAR -->
<div class="products-filter-row">
  <input id="orderSearchInput" class="search-bar" placeholder="Search by Order #, User, Email">
  <select id="orderStatusFilter" class="modal-input" style="max-width:180px">
    <option value="">All Status</option>
    <option value="pending">Pending</option>
    <option value="confirmed">Confirmed</option>
    <option value="processing">Processing</option>
    <option value="shipped">Shipped</option>
    <option value="delivered">Delivered</option>
    <option value="cancelled">Cancelled</option>
  </select>
</div>

<!-- ORDERS TABLE -->
<table class="admin-table">
  <thead>
    <tr>
      <th>Order</th>
      <th>Customer</th>
      <th>Total</th>
      <th>Status</th>
      <th>Payment</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody id="ordersTableBody">
    <tr><td colspan="7">Loading...</td></tr>
  </tbody>
</table>

<div id="ordersPagination" class="pagination"></div>

<!-- ORDER DETAIL MODAL -->
<div id="orderModal" class="edit-modal">
  <div class="edit-box" style="width:720px;max-height:90vh;overflow:auto">
    <h3>Order Details</h3>

    <div id="orderMeta" style="margin-bottom:14px;font-size:14px;color:#aaa"></div>

    <table class="admin-table">
      <thead>
        <tr>
          <th>Product</th>
          <th>SKU</th>
          <th>Qty</th>
          <th>Price</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody id="orderItemsBody">
        <tr><td colspan="5">Loading...</td></tr>
      </tbody>
    </table>

    <h4>Status Timeline</h4>
    <ul id="orderTimeline" style="font-size:13px;color:#bbb"></ul>

    <div class="edit-actions">
      <select id="orderStatusSelect" class="modal-input">
        <option value="pending">Pending</option>
        <option value="confirmed">Confirmed</option>
        <option value="processing">Processing</option>
        <option value="shipped">Shipped</option>
        <option value="delivered">Delivered</option>
        <option value="cancelled">Cancelled</option>
      </select>

      <input id="orderStatusComment" class="modal-input" placeholder="Admin note (optional)">
      <button class="save-btn" id="saveOrderStatusBtn">Update Status</button>
      <button class="close-btn" id="closeOrderModal">Close</button>
    </div>
    <h4>Payment Verification</h4>

<div style="display:flex;gap:10px;margin-bottom:12px; flex-direction:column; ">
  <select id="paymentStatusSelect" class="modal-input">
    <option value="unpaid">Unpaid</option>
    <option value="paid">Paid</option>
    <option value="failed">Failed</option>
    <option value="refunded">Refunded</option>
    <option value="partial_refund">Partial Refund</option>
  </select>

  <input
    id="paymentComment"
    class="modal-input"
    placeholder="Payment note (UTR / Txn ID / remark)"
  >

  <button class="save-btn" id="savePaymentStatusBtn">
    Update Payment
  </button>
</div>

  </div>
</div>
