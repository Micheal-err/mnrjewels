const menuBtn = document.querySelector(".header-push-button .push-button");
const menu = document.querySelector(".push-menu");
const overlay = document.querySelector(".menu-overlay");
const forCategory = document.querySelector("#forcategory");

// Current menu state
let currentMenu = 'main'; // 'main' or submenu ID

// Detect header height dynamically
function updateHeaderHeight() {
    const header = document.querySelector("header.header-with-topbar");
    if (header) {
        const height = header.offsetHeight;
        document.documentElement.style.setProperty("--header-height", height + "px");
    }
}
updateHeaderHeight();
window.addEventListener("resize", updateHeaderHeight);

// Open / close menu
menuBtn.addEventListener("click", () => {
    menu.classList.toggle("open");
    overlay.classList.toggle("show");
    menuBtn.classList.toggle("open");
    
    // Reset to main menu when opening
    if (menu.classList.contains("open")) {
        showMenu('main');
    } else {
        currentMenu = 'main';
    }
});

// Function to show any menu (main or submenu)
function showMenu(menuId) {
    // Hide everything first
    forCategory.style.display = 'none';
    const allSubmenus = menu.querySelectorAll('.submenu-panel');
    allSubmenus.forEach(panel => {
        panel.style.display = 'none';
    });
    
    // Show requested menu
    if (menuId === 'main') {
        forCategory.style.display = 'block';
        currentMenu = 'main';
    } else {
        const targetSubmenu = menu.querySelector(`.submenu-panel[data-menu="${menuId}"]`);
        if (targetSubmenu) {
            targetSubmenu.style.display = 'block';
            currentMenu = menuId;
        }
    }
}

// Function to get parent menu ID based on current menu
function getParentMenu(currentMenuId) {
    // Define parent-child relationships
    const parentMap = {
        // Level 1 submenus (parent is main)
        'men': 'main',
        'women': 'main',
        'unisex': 'main',
        'gifting': 'main',
        
        // Men's submenus (parent is 'men')
        'men-rings': 'men',
        'men-bracelets': 'men',
        'men-pendants': 'men',
        'men-earrings': 'men',
        
        // Women's submenus (parent is 'women')
        'women-rings': 'women',
        'women-earrings': 'women',
        'women-bracelets': 'women',
        'women-pendants': 'women',
        'women-necklaces': 'women',
        'women-chains': 'women',
        
        // Unisex submenus (parent is 'unisex')
        'unisex-pendants': 'unisex',
        'unisex-earrings': 'unisex',
        
        // Gifting submenus (parent is 'gifting')
        'for-him': 'gifting',
        'for-her': 'gifting'
    };
    
    return parentMap[currentMenuId] || 'main';
}

// Close on overlay click
overlay.addEventListener("click", () => {
    menu.classList.remove("open");
    overlay.classList.remove("show");
    menuBtn.classList.remove("open");
    currentMenu = 'main';
});

// Handle all menu clicks using event delegation
document.addEventListener('click', (e) => {
    const target = e.target;
    
    // Handle submenu toggle clicks
    if (target.classList.contains('submenu-toggle')) {
        e.preventDefault();
        e.stopPropagation();
        
        const submenuId = target.getAttribute('data-submenu');
        if (submenuId) {
            showMenu(submenuId);
        }
    }
    
    // Handle back button clicks
    else if (target.classList.contains('back-button') || 
             (target.closest('.back-button') && target.tagName === 'A')) {
        e.preventDefault();
        e.stopPropagation();
        
        // Go back to parent menu
        const parentMenu = getParentMenu(currentMenu);
        showMenu(parentMenu);
    }
    
    // Close menu when clicking regular links
    else if (target.classList.contains('nav-link') && 
             !target.classList.contains('submenu-toggle') &&
             !target.closest('.back-button') &&
             menu.classList.contains('open')) {
        
        setTimeout(() => {
            menu.classList.remove("open");
            overlay.classList.remove("show");
            menuBtn.classList.remove("open");
            currentMenu = 'main';
        }, 300);
    }
});

// Close sidebar when clicking outside
document.addEventListener('click', (e) => {
    if (menu.classList.contains('open')) {
        const isClickInsideMenu = menu.contains(e.target);
        const isClickOnMenuBtn = menuBtn.contains(e.target);
        
        if (!isClickInsideMenu && !isClickOnMenuBtn) {
            menu.classList.remove("open");
            overlay.classList.remove("show");
            menuBtn.classList.remove("open");
            currentMenu = 'main';
        }
    }
});

// Close sidebar with Escape key
document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && menu.classList.contains('open')) {
        // If not in main menu, go back to parent
        if (currentMenu !== 'main') {
            const parentMenu = getParentMenu(currentMenu);
            showMenu(parentMenu);
        } else {
            // If in main menu, close sidebar
            menu.classList.remove("open");
            overlay.classList.remove("show");
            menuBtn.classList.remove("open");
            currentMenu = 'main';
        }
    }
});
</script>

