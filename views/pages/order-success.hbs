<section class="success-wrapper mt-2">

  <div class="success-card">

    <!-- SUCCESS ICON -->
    <div class="success-icon">✔</div>

    <!-- HEADER -->
    <h1 class="fs-30">Order Placed Successfully</h1>
    <p class="sub">
      Thank you <b>{{address.name}}</b>!<br>
      Your order
      <b>
        {{#if order.order_number}}
          #{{order.order_number}}
        {{else}}
          #{{order.id}}
        {{/if}}
      </b>
      has been confirmed.
    </p>

    <!-- ORDER + BILLING -->
    <div class="success-grid">

      <!-- ORDER DETAILS -->
      <div class="info-box">
        <h3>Order Details</h3>

        <p class="text-white">
          <b>Order ID:</b>
          {{#if order.order_number}}
            #{{order.order_number}}
          {{else}}
            #{{order.id}}
          {{/if}}
        </p>

        <p class="text-white"><b>Status:</b> {{order.status}}</p>
        <p class="text-white"><b>Payment:</b> {{order.payment_method}}</p>

        <p class="text-white">
          <b>Subtotal:</b> ₹{{formatPrice order.subtotal}}
        </p>

        {{#if order.discount}}
        <p class="text-white">
          <b>Discount:</b> − ₹{{formatPrice order.discount}}
        </p>
        {{/if}}

        <p class="text-white">
          <b>Grand Total:</b> ₹{{formatPrice order.grand_total}}
        </p>

        <p class="text-white">
          <b>Date:</b> {{order.created_at}}
        </p>
      </div>

      <!-- BILLING DETAILS -->
      <div class="info-box text-white">
        <h3>Billing Details</h3>

        {{#if address}}
          <p>{{address.name}}</p>
          <p>{{address.email}}</p>
          <p>{{address.phone}}</p>
          <p>
            {{address.address_line1}}<br>
            {{address.city}}, {{address.state}} – {{address.pincode}}
          </p>
          <p>{{address.country}}</p>
        {{else}}
          <p>Billing details not available</p>
        {{/if}}
      </div>

    </div>

    <!-- ORDERED ITEMS -->
    <h3 class="mt">Ordered Items</h3>

    <table class="items-table text-base-color">
      <thead>
        <tr>
          <th>Product</th>
          <th>SKU</th>
          <th>Qty</th>
          <th>Price</th>
          <th>Total</th>
        </tr>
      </thead>

      <tbody>
        {{#each items}}
        <tr>
          <td>{{product_name}}</td>
          <td>{{sku}}</td>
          <td>{{quantity}}</td>
          <td>₹{{formatPrice price}}</td>
          <td>₹{{formatPrice total}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>

    <!-- ACTIONS -->
    <div class="actions">
      <a href="/account" class="btn-secondary">View Orders</a>
      <a href="/shop" class="btn-primary">Continue Shopping</a>
    </div>

  </div>

</section>

